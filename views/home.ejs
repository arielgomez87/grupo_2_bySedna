<!DOCTYPE html>
<html lang="es">

<head>
  <%- include ("./partials/head") %>
</head>

<body>
  <header>
    <%- include ("./partials/header") %>
  </header>

  <main>
    <div class="main-banner">
      <div id="carouselExampleSlidesOnly mx-auto" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner mx-auto">
          <div class="carousel-item active">
            <img src="/images/pexels-vaibhav-kashyap-237593.jpg" class="d-block img-slider" alt="...">
          </div>
          <div class="carousel-item">
            <img src="images/pexels-breno-cardoso-13212375.jpg" class="d-block img-slider" alt="...">
          </div>
        </div>
      </div>
      <div class="banner-overlay">
        <p>Visite nuestra seleccion de Primavera</p>
        <button type="button" class="btn btn-light">Tienda</button>
      </div>
    </div>
    <div>
      <section class="oferta">
          <% products.forEach(product => { %>
            <div class="col-12 col-sm-6 col-lg-3">
         <section class="product-box">
           <a href="/products/detail/<%= product.id %>">
             <figure class="product-box_image">
               <img src="/images/products/<%= product.image %>" alt="imagen de producto">
             </figure>
             <article class="product-box_data">
               <h2>$<%= product.price %> </h2>
               <span>%<%= product.discount %> OFF </span>
               <p><%= product.name %> </p>
               <i class="fas fa-truck"></i>
             </article>
           </a>
         </section>
       </div>
       <% }) %>
        </div>
      </section>
    </div>
  </main>

  <footer>
    <%- include ("./partials/footer") %>
  </footer>

</body>

</html>