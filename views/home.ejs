    </section>
    </div>
    <div>
      <section class="temporada">
        <% products.forEach(product=> { %>
          <div class=" product-temporada col-lg-4 col-md-6 col-sm-6 col-xs-12">
            <a href="/products/detail/<%= product.id %> ">
              <div class="product-img">
                <img class="img-fluid" src="/images/products/<%= product.img %> " alt="Bikini Gris" class="img-product">
              </div>
              <div class="product-description">
                <div class="product-title mx-auto">
                  <p style="text-align: center; ">
                    <%= product.name %>
                  </p>
                </div>
              </div>
            </a>
          </div>
          <% }) %>
    </div>
    </section>
    </div>
  </main>

  <footer>
    <%- include ("./partials/footer") %>
