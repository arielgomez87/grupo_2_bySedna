<!DOCTYPE html>
<html lang="es">

<head>
  <%- include ("./partials/head") %>
</head>

<body>
  <header>
    <%- include ("./partials/header") %>
  </header>

  <main>
    <div class="main-banner">
      <div id="carouselExampleSlidesOnly mx-auto" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner mx-auto">
          <div class="carousel-item active">
            <img src="/images/pexels-vaibhav-kashyap-237593.jpg" class="d-block img-slider" alt="...">
          </div>
          <div class="carousel-item">
            <img src="images/pexels-breno-cardoso-13212375.jpg" class="d-block img-slider" alt="...">
          </div>
        </div>
      </div>
      <div class="banner-overlay">
        <p>Visite nuestra seleccion de Primavera</p>
        <button type="button" class="btn btn-light">Tienda</button>
      </div>
    </div>
    <div>
      <section class="oferta">
          <% products.forEach(product => { %>
            <div class=" product col-lg-4 col-md-6 col-sm-6 col-xs-12">
              <div class="product-img">
                <img class="img-fluid" src="/images/products/<%= product.img %> " alt="Bikini Gris" class="img-product">
              </div>
              <div class="product-description">
                <div class="product-title">
                  <%= product.name %> 
                </div>
                <div class="product-price">
                  <p>$ <%= product.price %></p>
                </div>
              </div>
            </div>
       <% }) %>
        </div>
      </section>
    </div>
  </main>

  <footer>
    <%- include ("./partials/footer") %>
  </footer>

</body>

</html>